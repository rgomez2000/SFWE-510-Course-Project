				{
					"name": "Get USER Token (alice)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"let d=pm.response.json();",
									"pm.environment.set('user_access_token', d.access_token || '');",
									"pm.environment.set('user_refresh_token', d.refresh_token || '');",
									"pm.test('200 OK', ()=>pm.response.to.have.status(200));"
								],
								"type": "text/javascript"
							}
						}
